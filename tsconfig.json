{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "outDir": "./lib",
        "inlineSourceMap": true,
        "inlineSources": true,
        "forceConsistentCasingInFileNames": false
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts"
    ]
}